{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "BaseStats": {
            "type": "object",
            "properties": {
                "ResourceRecovery": {
                    "type": "integer",
                    "minimum": 0
                },
                "Health": {
                    "type": "integer",
                    "minimum": 0
                },
                "BaseDamage": {
                    "type": "integer",
                    "minimum": 0
                },
                "CritChance": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "CritDamage": {
                    "type": "number",
                    "minimum": 0
                },
                "Movespeed": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        },
        "JewelleryStats": {
            "allOf": [
                {
                    "$ref": "#/definitions/BaseStats"
                }
            ],
            "type": "object",
            "properties": {
                "AllAttribute": {
                    "type": "integer",
                    "minimum": 0
                },
                "Resource": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        },
        "ArmorAttributeSchemas": {
            "Strength": {
                "allOf": [
                    {
                        "$ref": "#/definitions/BaseStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "Defence": {
                                "type": "integer",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Health",
                            "Defence"
                        ]
                    }
                ]
            },
            "Dexterity": {
                "allOf": [
                    {
                        "$ref": "#/definitions/BaseStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "Evade": {
                                "type": "number",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Health",
                            "Evade"
                        ]
                    }
                ]
            },
            "Intelligence": {
                "allOf": [
                    {
                        "$ref": "#/definitions/BaseStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "EnergyBarrier": {
                                "type": "integer",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Health",
                            "EnergyBarrier"
                        ]
                    }
                ]
            },
            "additionalProperties": false
        },
        "JewelleryAttributeSchemas": {
            "Dexterity": {
                "allOf": [
                    {
                        "$ref": "#/definitions/JewelleryStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "Dexterity": {
                                "type": "integer",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Dexterity"
                        ]
                    }
                ]
            },
            "Strength": {
                "allOf": [
                    {
                        "$ref": "#/definitions/JewelleryStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "Strength": {
                                "type": "integer",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Strength"
                        ]
                    }
                ]
            },
            "Intelligence": {
                "allOf": [
                    {
                        "$ref": "#/definitions/JewelleryStats"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "Intelligence": {
                                "type": "integer",
                                "minimum": 0
                            }
                        },
                        "required": [
                            "Intelligence"
                        ]
                    }
                ]
            },
            "additionalProperties": false
        },
        "WeaponStats": {
            "allOf": [
                {
                    "$ref": "#/definitions/BaseStats"
                },
                {
                    "type": "object",
                    "required": [
                        "BaseDamage",
                        "CritChance",
                        "CritDamage"
                    ]
                }
            ],
            "additionalProperties": false
        },
        "BeltStats": {
            "allOf": [
                {
                    "$ref": "#/definitions/JewelleryStats"
                }
            ],
            "additionalProperties": false
        }
    }
}